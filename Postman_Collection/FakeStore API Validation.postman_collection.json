    {
      "name": "Cart APIs (Order Management)",
      "item": [
        {
          "name": "Create Cart (Data Driven used Here)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Response time is less than 2000ms seconds\", function () {\r",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
                  "});\r",
                  "\r",
                  "let quantity = pm.iterationData.get(\"quantity\");\r",
                  "\r",
                  "if (quantity > 0) {\r",
                  "    pm.test(\"Status code should be 201 for valid quantity\", function () {\r",
                  "        pm.response.to.have.status(201);\r",
                  "    });\r",
                  "} else {\r",
                  "    pm.test(\"Status code should not be 200 for invalid quantity\", function () {\r",
                  "        pm.expect(pm.response.code).to.not.eql(200);\r",
                  "    });\r",
                  "}\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n  \"userId\": {{user_id}},\r\n  \"date\": \"2024-03-10\",\r\n  \"products\": [\r\n    {\r\n      \"productId\": {{product_id}},\r\n      \"quantity\": {{quantity}}\r\n    }\r\n  ]\r\n}\r\n",
              "options": {
                "raw": {
